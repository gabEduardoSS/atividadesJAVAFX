<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.atts.atividade2.temp">
    <padding>
        <Insets bottom="20" left="20.0" right="20.0" />
    </padding>
    <VBox alignment="CENTER" spacing="20">
        <Label fx:id="aviso" wrapText="true" alignment="CENTER"/>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="celsius" onKeyTyped="#blockTF" prefWidth="50" promptText="Cº" alignment="CENTER" style=".text-field:disabled{-fx-opacity: 0.9}"/>
            <FontAwesomeIconView fontSmoothingType="LCD" glyphName="EXCHANGE" size="15" />
            <TextField fx:id="fahr" onKeyTyped="#blockTF" prefWidth="50" promptText="Fº" alignment="CENTER" style=".text-field:disabled{-fx-opacity: 0.9}"/>
        </HBox>

        <Label fx:id="resultado" text="Cº = Fº">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
    </VBox>
</VBox>
